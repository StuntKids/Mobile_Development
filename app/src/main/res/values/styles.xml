<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.StuntKids" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowNoTitle">true</item>  <!-- Menonaktifkan judul default -->
        <item name="android:windowActionBar">false</item> <!-- Menonaktifkan ActionBar -->
        <item name="android:windowTranslucentStatus">true</item> <!-- Translucent status bar -->
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>